<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Rescue Me</title>
    <link rel="icon" type="image/x-icon" href="/images/logo.png">

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/responsive.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/reset.css" asp-append-version="true" />
    <link rel=”stylesheet” href=”https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css” />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <script src="https://kit.fontawesome.com/748a3f9db9.js" crossorigin="anonymous"></script>



    <link rel="stylesheet" href="~/PetAdoption.styles.css" asp-append-version="true" />
</head>
<body >
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-dark">
            <a class="navbar-brand text-light" asp-area="" asp-controller="Home" asp-action="Index">Rescue Me</a>
            <button class="navbar-toggler " type="button" data-toggle="collapse" data-target="#navbarText" aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between ">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-light " asp-area="" asp-controller="Pet" asp-action="PetAll">Animals</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-light" asp-area="" asp-controller="Vet" asp-action="VetAll">Vets</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-light" asp-area="" asp-controller="Dressage" asp-action="DressageAll">Animal Training</a>
                    <li class="nav-item">
                        <a class="nav-link text-light" asp-area="" asp-controller="User" asp-action="UserAll">Persons</a>
                    </li>
                </ul>
                <span class="navbar-text ">
                    @if(User.Identity.IsAuthenticated) { <a class="navbar-brand text-light" asp-area="" asp-controller="Account" asp-action="Logout">@User.Claims.FirstOrDefault(c => c.Type == "http://schemas.xmlsoap.org/ws/2005/05/identity/claims/emailaddress").Value  Sign  Out</a>}

                  else { <a class="navbar-brand text-light" asp-area="" asp-controller="Account" asp-action="GoogleLogin">Sign  In</a>}
                </span>
            </div>
         
        </nav>



        
    </header>
    <div style="min-height: 100vh;">
        <main role="main" class="pb-3">
            @if(TempData["warning"]!=null)
            { <div class="p-3 mb-2 bg-warning text-dark">@TempData["warning"]</div>

            }
            @RenderBody()
        </main>
    </div>
    <div >
        <footer class="bg-dark text-center text-white  ">
            <!-- Grid container -->
            <div class="container p-4 pb-0">
                <!-- Section: Social media -->
                <section class="mb-4">
                    <!-- Facebook -->
                    <a class="btn text-white btn-floating m-1 " href="https://www.facebook.com/englishsetter.rescueme.org"
                       style="background-color: #3b5998;"
                     
                       role="button">
                        <i class="fab fa-facebook-f"></i>
                    </a>

                    <!-- Twitter -->
                    <a class="btn text-white btn-floating m-1" href="https://twitter.com/rescuemeanimal"
                       style="background-color: #55acee;"
                      
                       role="button">
                        <i class="fab fa-twitter"></i>
                    </a>

                    <!-- Google -->
                    <a class="btn text-white btn-floating m-1" href="mailto:rescueme@gmail.com"
                       style="background-color: #dd4b39;"
                      
                       role="button">
                        <i class="fab fa-google"></i>
                    </a>

                    <!-- Instagram -->
                    <a class="btn text-white btn-floating m-1" href="https://www.instagram.com/rescuemeanimal/"
                       style="background-color: #ac2bac;"
                  
                       role="button">
                        <i class="fab fa-instagram"></i>
                    </a>

                
                  
                </section>
                <!-- Section: Social media -->
            </div>
            <!-- Grid container -->
            <!-- Copyright -->
            
            <!-- Copyright -->
        </footer>
    </div>
       
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
