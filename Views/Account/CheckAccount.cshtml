@model PetAdoption.Models.FormModels.Userr
<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Rescue Me</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ProjetDotNet.styles.css" asp-append-version="true" />
    <link href="~/css/index.css" rel="stylesheet" asp-append-version="true">
</head>
<body class="text-center">

    <main class="form-signin w-100 m-auto">
        @using (Html.BeginForm("Signup","Account", FormMethod.Post))
        {
            <h1 class="h3 mb-3 fw-normal">Sign Up</h1>
            
            <div class="form-floating">
                @Html.TextBoxFor(m => m.name, new { @class = "form-control", @type="text", @id="floatingInput", required = "required" })
                <label for="floatingInput">Name</label>
            </div>
            <div class="form-floating">
                @Html.TextBoxFor(m => m.adress, new { @class = "form-control", @type="text", @id="floatingInput", required = "required" })
                <label for="floatingInput">Adress</label>
            </div>
            <div class="form-floating">
                @Html.TextBoxFor(m => m.number, new { @class = "form-control", @type="text", @id="floatingInput", required = "required" })
                <label for="floatingInput">Telephone Number</label>
            </div>
            <button class="w-100 btn btn-lg btn-dark mt-2" type="submit">Save</button>
            
        }
    </main>



</body>
</html>

